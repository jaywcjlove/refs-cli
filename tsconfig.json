{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "target": "ES2022",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "sourceMap": false,
    "outDir": "./lib",
    "allowJs": true,
    "baseUrl": "./"
  },
  "include": ["src"]
}
